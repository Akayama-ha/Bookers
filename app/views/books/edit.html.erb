<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<% @book.errors.full_messages.each do |message| %>
 <div class="form-error">
   <%= messages %>
 </div>
<% end %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Update Book' %>

<% end %>